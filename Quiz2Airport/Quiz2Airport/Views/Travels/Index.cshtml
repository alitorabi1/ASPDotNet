@model IEnumerable<Quiz2Airport.Models.Travel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")

    @using (Html.BeginForm("Index", "Travels", FormMethod.Get))
    {
    <p>
        Comfort: @Html.DropDownList("comfortClass", "All")
        From Airport: @Html.TextBox("SearchString")
        <input type="submit" value="Find" />
    </p>
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Age)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PassportNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateDeparture)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateArrival)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FromAirport)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ToAirport)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Comfort)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Age)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PassportNo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateDeparture)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateArrival)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FromAirport)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ToAirport)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Comfort)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
